@model iSociety.UI.Web.Models.CampoAluguel

@{
    ViewBag.Title = "CancelaReserva";
}


<h3>Tem certeza que deseja cancelar a reserva a baixo?</h3>
<div>
    @Html.HiddenFor(model => model.aluguelId)
    <h4>CampoAluguel</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Nome do Campo:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nomeCampo)
        </dd>

        <dt>
            @Html.DisplayName("Rua:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rua)
        </dd>

        <dt>
            @Html.DisplayName("Número:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numero)
        </dd>
        
        <dt>
            @Html.DisplayName("Cidade:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cidade)
        </dd>

        <dt>
            @Html.DisplayName("Horário de Início:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horarioInicio)
        </dd>

        <dt>
            @Html.DisplayName("Horário de Fim:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horarioFim)
        </dd>

        <dt>
            @Html.DisplayName("Valor:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.valor)
        </dd>

        <dt>
            @Html.DisplayName("Contém bar?")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.bar)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">

        <input type="submit" value="Cancelar Reserva" class="btn btn-default" />
    </div>

    }
</div>
