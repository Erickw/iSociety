@model iSociety.UI.Web.Models.Aluguel

@{
    ViewBag.Title = "RemoverAluguel";
}

<h3>Tem certeza que deseja remover o aluguel abaixo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Horário do Início:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horarioInicio)
        </dd>

        <dt>
            @Html.DisplayName("Horário do Fim:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.horarioFim)
        </dd>

        <dt>
            @Html.DisplayName("Valor:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.valor)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir Aluguel" class="btn btn-default" />         
        </div>
    }
</div>
