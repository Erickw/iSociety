@model IEnumerable<iSociety.UI.Web.Models.Campo>

@{
    ViewBag.Title = "Editar Campos";
}

<h2 style="text-align:center">Aqui você pode gerenciar seus campos</h2>

<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Nome do campo")
        </th>
        <th>
            @Html.DisplayName("Rua")
        </th>
        <th>
            @Html.DisplayName("CEP")
        </th>
        <th>
            @Html.DisplayName("Número")
        </th>
        <th>
            @Html.DisplayName("Cidade")
        </th>
        <th>
            @Html.DisplayName("Contém bar?")
        </th>

        <th>
            @Html.DisplayName("Opções do campo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bar)
        </td>
        <td>
            @Html.ActionLink("Adicionar Horário", "AdicionarHorario", new { id = item.id }) |
            @Html.ActionLink("Remover Horário", "ExcluirHorario", new { id = item.id }) |
            @Html.ActionLink("Editar", "EditCampo", new { id = item.id }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.id }) |
            @Html.ActionLink("Criar Aluguel", "AdicionarAluguel", new { id = item.id }) |
            @Html.ActionLink("Ver Horários", "VerHorarios", new { id = item.id })
        </td>
    </tr>
}

</table>
